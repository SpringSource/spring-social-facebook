package org.springframework.social.facebook.api.ads.impl.json;

import java.io.IOException;

import org.codehaus.jackson.JsonParser;
import org.codehaus.jackson.JsonProcessingException;
import org.codehaus.jackson.map.DeserializationContext;
import org.codehaus.jackson.map.JsonDeserializer;
import org.springframework.social.facebook.api.ads.UserRole;

class RoleDeserializer extends JsonDeserializer<UserRole> {
	@Override
	public UserRole deserialize(JsonParser jp, DeserializationContext ctxt) throws IOException, JsonProcessingException {
		return UserRole.valueOf(jp.getText().toUpperCase());
	}
}
